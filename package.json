{
  "name": "@salvatori/alma",
  "version": "5.0.2",
  "description": "Wordpress theme based on Alma using Vite",
  "license": "MIT",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "prod": "vite build",
    "production": "vite build",
    "serve": "vite preview",
    "lint:js": "eslint --ext .js .",
    "lint:css": "stylelint **/*.{scss,css}",
    "lint": "yarn lint:js && yarn lint:css",
    "translate": "yarn translate:pot && yarn translate:js",
    "translate:pot": "wp i18n make-pot . ./resources/lang/sage.pot --ignore-domain --include=\"app,resources\"",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "dotenv": "^16.0.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "postcss-custom-media": "^9.1.3",
    "postcss-inline-svg": "^6.0.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.8",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-output-manifest": "^2.0.0",
    "sass": "^1.62.0",
    "stylelint": "^15.6.0",
    "stylelint-config-recommended-scss": "^11.0.0",
    "stylelint-config-standard": "^33.0.0",
    "vite": "^4.3.2"
  },
  "dependencies": {
    "@barba/core": "^2.9.7",
    "@barba/css": "^2.1.15",
    "@creativebulma/bulma-tooltip": "^1.2.0",
    "@roots/sage": "^6.14.3",
    "@studio-freight/lenis": "^1.0.16",
    "@wordpress/blocks": "^12.14.0",
    "@wordpress/dom-ready": "^3.37.0",
    "@wordpress/edit-post": "^7.14.0",
    "alpine-magic-helpers": "^1.2.2",
    "alpinejs": "^3.12.2",
    "bulma": "^0.9.4",
    "bulma-helpers": "^0.3.12",
    "caniuse-lite": "^1.0.30001517",
    "feather-icons": "^4.28.0",
    "gsap": "^3.6.1",
    "jarallax": "^1.12.1",
    "jquery": "^3.7.0",
    "loconative-scroll": "https://github.com/quentinhocde/loconative-scroll",
    "mouse-follower": "^1.1.2"
  }
}
